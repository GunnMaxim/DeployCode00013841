@model ProductMVC3.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create Product</h1>

<div>
    <h4>Product</h4>
    <hr />
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductCategoryId" class="control-label"></label>
            <select asp-for="ProductCategoryId" class="form-control" asp-items="ViewBag.CategoryList">
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
